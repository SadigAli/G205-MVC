@model Blog
@{
    ViewData["Title"] = "Edit";
}


<div class="pagetitle">
    <h1>Form Validation</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="index" asp-controller="dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="index">Blogs</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Blog Edit</h5>

                    <!-- Custom Styled Validation -->
                    <form method="post" class="row g-3 needs-validation" enctype="multipart/form-data">
                        <div class="col-md-12">
                            <label for="validationCustom01" class="form-label">Title</label>
                            <input type="text" class="form-control" id="validationCustom01" asp-for="Title">
                            <span asp-validation-for="Title" class="invalid-feedback" style="display:block;">

                            </span>
                        </div>
                        <div class="col-md-12">
                            <label for="validationCustom02" class="form-label">Description</label>
                            <textarea id="editor1" asp-for="Description"></textarea>
                            <span asp-validation-for="Description" class="invalid-feedback" style="display:block">

                            </span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Current Image</label>
                            <div class="card-image">
                                <img width="150" height="150" src="~/uploads/blogs/@Model.Image" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Image</label>
                            <input class="form-control" asp-for="File" accept=".png,.jpg" type="file" />
                            <span asp-validation-for="File" class="invalid-feedback" style="display:block">

                            </span>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit form</button>
                        </div>
                    </form><!-- End Custom Styled Validation -->

                </div>
            </div>

        </div>
    </div>
</section>

@section JS{
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor1');

    </script>

}
