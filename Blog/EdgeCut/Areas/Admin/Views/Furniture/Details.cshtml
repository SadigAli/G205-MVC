@model Furniture
@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">Furniture Details</div>
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" value="@Model.Name" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input class="form-control" value="@Model.Price" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Created At</label>
            <input class="form-control" value="@Model.CreatedAt?.ToString("dd/MM/yyyy")" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Updated At</label>
            <input class="form-control" value="@Model.UpdatedAt?.ToString("dd/MM/yyyy")" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Image</label>
            <div class="card-image">
                <img width="150" height="150" src="~/uploads/furnitures/@Model.Image" />
            </div>
        </div>
        <div class="mb-3" >
            <a class="btn btn-primary" asp-action="index" asp-controller="furniture">Back</a>
        </div>
    </div>
</div>

