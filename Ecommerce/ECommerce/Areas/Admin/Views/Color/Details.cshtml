@model ColorGetDTO
@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">Color Details</div>
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" value="@Model.Name" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Created At</label>
            <input class="form-control" value="@Model.CreatedAt?.ToString("dd/MM/yyyy")" disabled />
        </div>
        <div class="mb-3" >
            <a class="btn btn-primary" asp-action="index" asp-controller="Blog">Back</a>
        </div>
    </div>
</div>

